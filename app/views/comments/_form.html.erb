<%= form_with(model: [ @game, @game.comments.build ], local: true) do |form| %>
  <div class="form-group">
    <%= form.text_field :commenter, class:"form-control" , value:current_admin.first_name , style: 'display:none'%>
  </div>
  <div class="form-group">
    <%= form.label "Kommentar" %>
    <%= form.text_area :body, class:"form-control" %>
  </div>
  <p>
    <%= form.submit "Senden", class:"btn btn-primary"%>
  </p>
<% end %>
