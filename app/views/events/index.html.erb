<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
	  <th>Spiel</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Ort</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
		<td><%= event.game.name %></td>
        <td><%= event.startDate.strftime("%d/%m/%Y %I:%M") %></td>
        <td><%= event.endDate.strftime("%d/%m/%Y %I:%M") %></td>
        <td><%= event.ort %></td>
        <td><%= link_to 'Show', event %>
        <%= link_to 'Edit', edit_event_path(event) %>
        <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

