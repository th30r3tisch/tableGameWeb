<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", id: :event_name %>
  </div>

  <div class="form-group datePicker">
    <%= form.label :startDate %>
    <%= form.datetime_select :startDate, id: :event_startDate, default: DateTime.now %>
  </div>

  <div class="form-group datePicker">
    <%= form.label :endDate %>
    <%= form.datetime_select :endDate, id: :event_endDate, default: DateTime.now %>
  </div>

  <div class="form-group">
    <%= form.label :game %>
    <%= form.select :game_id, Game.all.collect { |g| [g.name, g.id]}, {include_blank: true}, {class:"form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control", id: :event_description %>
  </div>

  <div class="form-group">
    <%= form.label :ort %>
    <%= form.text_field :ort, class:"form-control", id: :event_ort %>
  </div>

  <div class="form-group">
    <%= form.label :max_participants %>
    <%= form.text_field :max_participants, class:"form-control", id: :max_participants %>
  </div>

  <div class="actions">
    <%= form.submit "Speichern", class:"btn btn-primary" %>
  </div>
<% end %>
