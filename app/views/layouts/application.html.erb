<!doctype html>
<html>
<head>
    <title>BoardGameSite</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
	<div id="header">
	  	<h1> <u> Board Games Site </u> </h1>
  		<div id="menu">
    	<ul>
      		<li><%= link_to 'HOME', games_path %></li>
      		<li><a href="#" title="">ABOUT US</a></li>
      		<li><a href="#" title="">NEWS</a></li>
      		<li><a href="#" title="">CONTACT US</a></li>
      		<li><a href="#" title="">LINKS</a></li>
    	</ul>
		<div id="search">
			<%= form_tag(games_path, method: :get) do %>
  				<%= text_field_tag :search, params[:search], class:"form-control", placeholder: 'Search'%>
  				<%= button_tag(type: "submit", name: nil) do%>
					<i class="fa fa-search"></i>
				<% end %>
			<% end %>
		</div>
  		</div>
  	</div>

  	<div id="content">
		<% if notice.present? %>
        	<aside class = "alert alert-info">
         		<p class="notice"><%= notice %></p>
       		</aside>
     	<% end %>
     	<% if alert.present? %>
       		<aside class = "alert alert-danger">
         		<p class="alert"><%= alert %></p>
       		</aside>
     	<% end %>
	  	<%= yield %>
  	</div>

  	<div id="footer">
	  	<% if current_admin %>
      		<%= link_to "Log Out", destroy_admin_session_path, class: 'perso-link', method: :delete %>
			<%= link_to "Mein Profil", edit_admin_registration_path, class: 'perso-link' %>
        <% else %>
            <%= link_to "Log in", new_admin_session_path, class: 'perso-link' %>
        <% end %>
  	</div>
</body>
</html>
