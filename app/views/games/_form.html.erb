<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", id: :game_name %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control", id: :game_description %>
  </div>

  <div class="form-group">
    <%= form.label :playtime %>
    <%= form.text_field :playtime, class:"form-control", id: :game_playtime %>
  </div>

  <div class="form-group">
    <%= form.label :maxPlayer %>
    <%= form.text_field :maxPlayer, class:"form-control", id: :game_maxPlayer %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category_tag_id, CategoryTag.all.collect { |c| [c.name, c.id]}, include_blank: true%>
  </div>

  <div class="form-group">
    <%= form.label :releaseYear %>
    <%= form.text_field :releaseYear, class:"form-control", id: :game_releaseYear %>
  </div>

  <div class="form-group">
    <%= form.label :pictureUrl %>
    <%= form.file_field :pictureUrl, class:"form-control", id: :game_pictureUrl %>
    <% if form.object.pictureUrl? %>
      <%= image_tag form.object.pictureUrl.thumb.url %>
      <%= form.label :remove_image %>
      <%= form.check_box :remove_pictureUrl %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Speichern", class:"btn btn-primary" %>
  </div>
<% end %>
