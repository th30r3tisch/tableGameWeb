<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>
<div class="gameinfo">
	<span>
	  <i class="fa fa-clock-o fa-2x" aria-hidden="true"></i>
	  <%= @game.playtime %>
	</span>

	<span>
	  <i class="fa fa-users fa-2x" aria-hidden="true"></i>
	  <%= @game.maxPlayer %>
	</span>

	<span>
	  <i class="fa fa-gamepad fa-2x" aria-hidden="true"></i>
	  <%= @game.gameType %>
	</span>

	<span>
	  <i class="fa fa-calendar-o fa-2x" aria-hidden="true"></i>
	  <%= @game.releaseYear %>
	</span>
</div>

<p>
  <img src=" <%= @game.pictureUrl %> " width="100" height="150">
</p>

<h3>Comments</h3>
<%= render @game.comments %>

<h3>Add a comment:</h3>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
