<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Playtime</th>
      <th>Maxplayer</th>
      <th>Gametype</th>
      <th>Releaseyear</th>
      <th>Pictureurl</th>
      <th>Blabla</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.description %></td>
        <td><%= game.playtime %></td>
        <td><%= game.maxPlayer %></td>
        <td><%= game.gameType %></td>
        <td><%= game.releaseYear %></td>
        <td><%= game.pictureUrl %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

