<div id="filter">
  <div id="filterWrapper">
    <%= form_tag('/games/filter' , method: :get) do |form| %>
      <div class="form-group">
        <%= label_tag :play_time%>
        <%= text_field_tag :play_time, params[:play_time], class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :max_player%>
        <%= text_field_tag :max_player, params[:max_player], class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :min_player%>
        <%= text_field_tag :min_player, params[:min_player], class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :releaseYear%>
        <%= text_field_tag :releaseYear, params[:releaseYear], class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :category%>
        <%= text_field_tag :category, params[:category], class:"form-control"%>
      </div>
      <div class="actions">
        <%=@button = submit_tag "Filter", class:"btn btn-primary"%>
      </div>
    <% end %>
  </div>
  <div id="radialShadow"></div>
</div>
